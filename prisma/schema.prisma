generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model User {
  id         String     @id @unique
  username   String     @unique
  email      String     @unique
  firstname  String
  lastname   String
  bio        String     @default("")
  tagline    String     @default("Hey ðŸ™Œ! using DResume.in")
  avatar     String?    @default("")
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime   @default(now()) @db.Timestamptz(6)
  attributes Json       @default("{}")
  twitterid  String?    @default("")
  githubid   String?    @default("")
  linkedinid String?    @default("")
  websiteurl String?    @default("")
  feedback   Feedback[]
  site       Site[]

  @@index([username, id])
  @@map("user")
}

model Feedback {
  id              BigInt   @id @default(autoincrement())
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  user_id         String
  feedback        String
  feedback_type   String
  feedback_date   DateTime @default(now())
  feedback_note   String?
  feedback_action String?
  user            User     @relation(fields: [user_id], references: [id])
}

model UserEducation {
  id                Int       @id @default(autoincrement())
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  user_id           String
  school_name       String
  school_location   String?
  school_degree     String?
  school_major      String?
  school_start_date DateTime?
  school_end_date   DateTime?
  education_note    String?
  siteId            String
  site              Site      @relation(fields: [siteId], references: [id])
}

model UserWorkExperience {
  id                    Int       @id @default(autoincrement())
  created_at            DateTime  @default(now()) @db.Timestamptz(6)
  user_id               String
  company_name          String
  company_location      String?
  employment_position   String    @default("Software Developer")
  employment_start_date DateTime  @default(now())
  still_working         Boolean
  employment_end_date   DateTime?
  employment_type       String?
  descriptions          String?
  siteId                String?
  site                  Site?     @relation(fields: [siteId], references: [id])
}

model UserCertificate {
  id                      Int      @id @default(autoincrement())
  created_at              DateTime @default(now()) @db.Timestamptz(6)
  user_id                 String
  certificate_name        String
  certificate_issued_date DateTime
  certificate_issued_by   String
  certificate_url         String
  certificate_verify_link String?
  certificate_note        String?
  description             String?
  imageurl                String
  siteId                  String
  site                    Site     @relation(fields: [siteId], references: [id])
}

model Projects {
  id            Int                @id @default(autoincrement())
  name          String
  description   String             @default("")
  url           String?
  repourl       String?
  oneliner      String             @default("")
  skills        String[]
  techstack     ProjectTechStack[]
  imageUrl      String?            @default("https://dresume.me/placeholder.png")
  videoUrl      String?
  started_on    DateTime           @default(now())
  ended_on      DateTime?
  still_working Boolean            @default(false)
  created_at    DateTime           @default(now()) @db.Timestamptz(6)
  updated_at    DateTime           @default(now()) @db.Timestamptz(6)
  user_id       String
  siteId        String?
  site          Site?              @relation(fields: [siteId], references: [id])

  @@map("projects")
}

model Resume {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  url         String?
  file_path   String
  file_name   String
  file_type   String
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @default(now()) @db.Timestamptz(6)
  user_id     String
  siteId      String?
  site        Site?    @relation(fields: [siteId], references: [id])

  @@map("resume")
}

model Blog {
  id            String   @id @default(cuid())
  title         String?
  description   String?
  content       String?
  slug          String   @default(cuid())
  image         String?  @default("https://dresume.me/placeholder.png")
  imageBlurhash String?  @default("data:image/png;base64,")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  published     Boolean  @default(false)
  siteId        String?
  userId        String?
  site          Site?    @relation(fields: [siteId], references: [id])

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
  @@map("blog")
}

model TechStack {
  id               Int                @id @default(autoincrement())
  name             String
  description      String?
  icon             String
  tag              String[]
  category         String[]
  siteTechStack    SiteTechStack[]
  ProjectTechStack ProjectTechStack[]

  @@map("techstack")
}

model ProjectTechStack {
  projectId   Int
  techStackId Int
  Project     Projects  @relation(fields: [projectId], references: [id])
  TechStack   TechStack @relation(fields: [techStackId], references: [id])

  @@id([projectId, techStackId])
  @@map("project_techstack")
}

model SiteTechStack {
  siteId      String
  techStackId Int
  Site        Site      @relation(fields: [siteId], references: [id])
  TechStack   TechStack @relation(fields: [techStackId], references: [id])

  @@id([siteId, techStackId])
  @@map("site_techstack")
}

model Site {
  id             String               @id @default(cuid())
  name           String
  description    String
  tagline        String               @default("")
  logo           String?              @default("https://dresume.me/placeholder.png")
  font           String               @default("font-cal")
  primaryColor   String               @default("#000000")
  secondaryColor String               @default("#ffffff")
  theme          String               @default("theme-default")
  about          String               @default("")
  skills         String[]             @default(["development"])
  image          String?              @default("https://dresume.me/placeholder.png")
  twitterid      String?              @default("")
  githubid       String?              @default("")
  linkedinid     String?              @default("")
  instagramid    String?              @default("")
  youtubeurl     String?              @default("")
  websiteurl     String?              @default("")
  imageBlurhash  String?              @default("data:image/png;base64,")
  subdomain      String               @unique
  customDomain   String?              @unique
  message404     String?              @default("Blimey! You've found a page that doesn't exist.")
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  userId         String
  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  certificates   UserCertificate[]
  education      UserEducation[]
  workexperience UserWorkExperience[]
  Blog           Blog[]
  projects       Projects[]
  resume         Resume[]
  siteTechStack  SiteTechStack[]

  @@index([userId])
}

model SiteViews {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  siteId     String
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String?
  domainCount   Int?
  url           String?
  image         String?
  imageBlurhash String?
}

model Newsletter {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique

  @@map("newsletter")
}

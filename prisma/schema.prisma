generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model User {
  id         String     @id
  username   String     @unique
  email      String     @unique
  firstname  String
  lastname   String
  bio        String     @default("")
  tagline    String     @default("Hey ðŸ™Œ! using DResume.in")
  avatar     String?    @default("")
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime   @default(now()) @db.Timestamptz(6)
  attributes Json       @default("{}")
  feedback   Feedback[]
  site       Site[]
  twitterid  String?    @default("")
  githubid   String?    @default("")
  linkedinid String?    @default("")
  websiteurl String?    @default("")

  @@index([username])
  @@map("user")
}

// model that store feedbacks for the user.

model Feedback {
  id              BigInt   @id @default(autoincrement())
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  user_id         String
  user            User     @relation(fields: [user_id], references: [id])
  feedback        String
  feedback_type   String
  feedback_date   DateTime @default(now())
  feedback_note   String?
  feedback_action String?
}

model UserEducation {
  id                Int       @id @default(autoincrement())
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  user_id           String
  school_name       String
  school_location   String?
  school_degree     String?
  school_major      String?
  school_start_date DateTime?
  school_end_date   DateTime?
  education_note    String?
  site              Site?     @relation(fields: [siteId], references: [id])
  siteId            String?
}

model UserWorkExperience {
  id                 Int       @id @default(autoincrement())
  created_at         DateTime  @default(now()) @db.Timestamptz(6)
  user_id            String
  company_name       String
  company_location   String?
  company_position   String
  company_start_date DateTime
  still_working      Boolean
  company_end_date   DateTime?
  company_note       String?
  site               Site?     @relation(fields: [siteId], references: [id])
  siteId             String?
}

model UserCertificate {
  id                      Int      @id @default(autoincrement())
  created_at              DateTime @default(now()) @db.Timestamptz(6)
  user_id                 String
  certificate_name        String
  certificate_issued_date DateTime
  certificate_issued_by   String
  certificate_url         String
  certificate_verify_link String?
  certificate_note        String?
  site                    Site?    @relation(fields: [siteId], references: [id])
  siteId                  String?
}

model projects {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  url         String?
  repourl     String?
  oneliner    String   @default("")
  skills      String[]
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @default(now()) @db.Timestamptz(6)
  user_id     String
  site        Site?    @relation(fields: [siteId], references: [id])
  siteId      String?

  @@map("projects")
}

model Resume {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  url         String?
  file_path   String // Path to the resume file
  file_name   String // Original name of the resume file
  file_type   String // Type of the resume file (e.g., PDF, DOCX)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @default(now()) @db.Timestamptz(6)
  user_id     String
  site        Site?    @relation(fields: [siteId], references: [id])
  siteId      String?

  @@map("resume")
}

model Blog {
  id            String   @id @default(cuid())
  title         String?  @db.Text
  description   String?  @db.Text
  content       String?  @db.Text
  slug          String   @default(cuid())
  image         String?  @default("https://dresume.me/placeholder.png") @db.Text
  imageBlurhash String?  @default("data:image/png;base64,") @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  published     Boolean  @default(false)
  siteId        String?
  userId        String?
  site          Site?    @relation(fields: [siteId], references: [id])

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
  @@map("blog")
}

model TechStack {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  icon          String
  tag           String[]
  category      String[]
  siteTechStack SiteTechStack[]

  @@map("techstack")
}

model SiteTechStack {
  siteId      String
  techStackId Int
  Site        Site      @relation(fields: [siteId], references: [id])
  TechStack   TechStack @relation(fields: [techStackId], references: [id])

  @@id([siteId, techStackId])
  @@map("site_techstack")
}

model Site {
  id             String               @id @default(cuid())
  name           String
  description    String               @db.Text
  tagline        String               @default("") @db.Text
  logo           String?              @db.Text
  font           String               @default("font-cal")
  primaryColor   String               @default("#000000")
  secondaryColor String               @default("#ffffff")
  theme          String               @default("theme-default")
  about          String               @default("")
  skills         String[]             @default(["development"])
  image          String?              @default("https://dresume.me/placeholder.png") @db.Text
  twitterid      String?              @default("")
  githubid       String?              @default("")
  linkedinid     String?              @default("")
  instagramid    String?              @default("")
  youtubeurl     String?              @default("")
  websiteurl     String?              @default("")
  //
  imageBlurhash  String?              @default("data:image/png;base64,") @db.Text
  subdomain      String               @unique
  customDomain   String?              @unique
  message404     String?              @default("Blimey! You've found a page that doesn't exist.") @db.Text
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         String
  education      UserEducation[]
  workexperience UserWorkExperience[]
  certificates   UserCertificate[]
  projects       projects[]
  resume         Resume[]
  Blog           Blog[]
  siteTechStack  SiteTechStack[]

  @@index([userId])
}

model SiteViews {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  siteId     String
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String? @db.Text
  domainCount   Int?
  url           String?
  image         String? @db.Text
  imageBlurhash String? @db.Text
}

model Newsletter {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique

  @@map("newsletter")
}
